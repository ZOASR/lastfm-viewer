    "changelog": "turbo changelog"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "dependencies": {
    "@changesets/cli": "^2.27.1"
  }
}