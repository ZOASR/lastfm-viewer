{
  "private": false,
  "name": "lastfm-viewer",
  "version": "1.0.0",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "update": "turbo update",
    "sbupdate": "git add . && git commit -m \"dev: updated submodules\"",
